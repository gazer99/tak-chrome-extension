{
  "manifest_version": 2,
  "name": "TakExtension",
  "version": "1.0.0",
  "permissions": [
    "alarms",
    "https://*/",
    "cookies",
    "storage",
    "activeTab",
    "tabs",
    "webNavigation"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [ "https://www.linkedin.com/in/*" ],
      "js": [ "contentScriptPubLknProfile.js" ]
    },
    {
      "matches": [ "https://www.linkedin.com/talent/hire/*" ],
      "js": [ "contentScriptRecruiter.js" ]
    }
  ]
}