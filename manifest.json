{
  "manifest_version": 2,
  "name": "TakExtension",
  "version": "1.0.0",
  "permissions": [
    "alarms",
    "https://*/",
    "cookies",
    "storage",
    "activeTab",
    "tabs",
    "webNavigation"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [ "https://www.linkedin.com/*" ],
      "js": [ "utils.js", "contentScriptLinkedin.js" ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}